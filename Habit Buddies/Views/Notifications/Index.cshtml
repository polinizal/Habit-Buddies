@model IEnumerable<Habit_Buddies.Data.Entities.Notification>

@{
    ViewData["Title"] = "Index";
}

<h2>Your List With Notifications :)</h2>

<button type="button" class="btn btn-outline-secondary mb-3 mt-1 btn-sm" onclick="location.href='@Url.Action("Create","Notifications")'"> @*style the Create Notification link, make it a button, style it*@
    <i class="bi bi-plus-square"></i>  CREATE NEW NOTIFICATION
</button>

<table class="table table-hover table-bordered mb-5">
    <thead class="thread-color">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HabitId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>*@
            @*<td>
                @Html.DisplayFor(modelItem => item.NotificationTime)
            </td>*@
            @*<td>
                @Html.DisplayFor(modelItem => item.IsEnabled)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Habit.HabitId)
            </td>
            <td class="crud">
                    <a asp-action="Edit" asp-route-id="@item.NotificationId" class="btn btn-outline-secondary btn-sm"><i class="bi bi-pencil-square"></i></a> 
                    <a asp-action="Details" asp-route-id="@item.NotificationId" class="btn btn-outline-secondary btn-sm"><i class="bi bi-info-square"></i></a> 
                    <a asp-action="Delete" asp-route-id="@item.NotificationId" class="btn btn-outline-secondary btn-sm"><i class="bi bi-trash3"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
