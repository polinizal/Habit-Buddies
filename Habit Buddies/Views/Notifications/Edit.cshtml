@model Habit_Buddies.Data.Entities.Notification

@{
    ViewData["Title"] = "Edit";
}

<h2 class="edit">Edit Notification</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NotificationId" />
            
            <div class="form-floating mb-3">                
                <input asp-for="Title" class="form-control" id="title" placeholder="Edit Title" name="title" />
                <label asp-for="Title" class="control-label" for="title"></label>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Description" class="form-control" id="description" placeholder="Edit Description" name="description" />
                <label asp-for="Description" class="control-label" for="description"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label asp-for="NotificationTime" class="control-label"></label>
                <input asp-for="NotificationTime" class="form-control" />
                <span asp-validation-for="NotificationTime" class="text-danger"></span>
            </div>
            <div hidden class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsEnabled" /> @Html.DisplayNameFor(model => model.IsEnabled)
                </label>
            </div>
            <div class="form-group mb-2">
                <label asp-for="HabitId" class="control-label"></label>
                <select asp-for="HabitId" class="form-control" asp-items="ViewBag.HabitId"></select>
                <span asp-validation-for="HabitId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-warning" />
                <a asp-action="Index" class="btn btn-info">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
