@model Habit_Buddies.Data.Entities.UserFriendship

@{
    ViewData["Title"] = "Delete";
}

<h2 class="mb-2 delete">Delete</h2>

<h3 class="mb-2">Are you sure you want to remove this Friend from your Friends List?</h3>
<div>
    <hr />
    <dl class="row">
        <dt hidden class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd hidden class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserFriend)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserFriend.UserName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="UserFriendId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-info">Back to List</a>
    </form>
</div>
