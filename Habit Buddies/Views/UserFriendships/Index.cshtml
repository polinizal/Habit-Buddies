@model IEnumerable<Habit_Buddies.Data.Entities.UserFriendship>

@{
    ViewData["Title"] = "Index";
}

<h2>Your Friends List :)</h2>

<button type="button" class="btn btn-outline-secondary my-1 mb-3 btn-sm" onclick="location.href='@Url.Action("Create","UserFriendships")'">
    <i class="bi bi-plus-square"></i>  ADD A FRIEND
</button>

<table class="table table-hover table-bordered">
    <thead class="thread-color">
        <tr>          
            <th>
                @Html.DisplayNameFor(model => model.UserFriend)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserFriend.UserName)
            </td>
            <td>
                    <a asp-controller="UserFriendships" asp-action="IndexFriendHabits" asp-route-userFriendId="@item.UserFriendId" class="btn btn-outline-secondary btn-sm"><i class=" bi bi-exclamation-lg"></i></a>
                    <a asp-action="Delete" asp-route-userId="@item.UserId" asp-route-userFriendId="@item.UserFriendId" class="btn btn-outline-secondary btn-sm"><i class="bi bi-trash3"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
